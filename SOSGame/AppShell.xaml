<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SOSGame.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:SOSGame.Controls.Pages"
    Shell.NavBarIsVisible="False"
    BackgroundColor="{StaticResource SuperMarioPrimaryColor}"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate pages:MainMenuPage}"
        Route="MainPage" />

    <ShellContent
        Title="PlayingPage"
        ContentTemplate="{DataTemplate pages:PlayingPage}"
        Route="PlayingPage" />
</Shell>
